{
  "manifest_version": 2,
  "name": "JSON Viewer",
  "version": "1.0.0",
  "description": "Port of Firefox's JSON Viewer",
  "homepage_url": "https://github.com/pd4d10/json-viewer",
  "background": {
    "scripts": ["dist/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content-script.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "128": "icon.png"
  },
  "permissions": ["webRequest", "<all_urls>", "storage"]
}
