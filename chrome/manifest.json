{
  "manifest_version": 3,
  "name": "JSON Viewer",
  "version": "1.1.1",
  "description": "Port of Firefox's JSON Viewer",
  "offline_enabled": true,
  "homepage_url": "https://github.com/pd4d10/json-viewer",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content-script.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "128": "icon.png"
  },
  "permissions": ["storage"]
}
